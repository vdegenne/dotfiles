#!/usr/bin/bash

pm_id=$(node <<EOF
const pm2_processes = `pm2 jlist`;
const pm2_process = pm2_processes.filter(proc => proc.pm2_env.pm_exec_path === "`pwd`");
if (pm2_process.length) {
  // one process found
  console.log(pm2_process[0].pm_id)
  process.exit(0);
}
// else // not found
process.exit(1);
EOF
     )

if [ $? -ne 0 ]; then
    echo "pm2 process not found"
else
    pm2 logs $pm_id
fi
